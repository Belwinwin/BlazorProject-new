@using BlazorProject.Services
@inject DatabaseConnectionService DbConnectionService
@inject NavigationManager Navigation

<div class="d-flex align-items-center">
    <span class="me-2"><strong>Database:</strong></span>
    <div class="btn-group" role="group">
        <button type="button" class="btn @(DbConnectionService.SelectedConnection == "OracleConnection" ? "btn-primary" : "btn-outline-primary") btn-sm" 
                @onclick="SelectOptionA">
            Option A
        </button>
        <button type="button" class="btn @(DbConnectionService.SelectedConnection == "OracleConnection2" ? "btn-primary" : "btn-outline-primary") btn-sm" 
                @onclick="SelectOptionB">
            Option B
        </button>
    </div>
</div>

@code {
    private void SelectOptionA()
    {
        SelectDatabase("OracleConnection");
    }

    private void SelectOptionB()
    {
        SelectDatabase("OracleConnection2");
    }

    private void SelectDatabase(string connectionName)
    {
        if (DbConnectionService.SelectedConnection != connectionName)
        {
            DbConnectionService.SetConnection(connectionName);
            Navigation.NavigateTo("/employee", forceLoad: true);
        }
    }
}